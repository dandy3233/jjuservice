generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Dormitory {
  id                  Int      @id @default(autoincrement())
  block_no            String
  dorm_no             String
  problem_type        String
  problem_description String
  submission_date     DateTime @default(now())
}


model academic {
  id                Int      @id @default(autoincrement())
  full_name         String
  id_no             String
  department        String
  problem_description String
  submission_date   DateTime @default(now())
}

model complaint {
  id             Int      @id @default(autoincrement())
  id_no          String
  subject        String
  complaint_text String
  submission_date DateTime @default(now())
}



model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  createdAt DateTime @default(now())
}
